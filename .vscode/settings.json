{
    // VSCode IDE not yet supported file .soliumrc.json
    // sol we need to config with this file as override
    "solidity.soliumRules": {
      "error-reason": "off",
      "indentation": ["error", 4],
      "max-len": ["error", 200],
      "no-constant": ["error"],
      "no-empty-blocks": "off",
      "quotes": ["error", "double"],
      "uppercase": "off",
      "visibility-first": "error",

      "security/enforce-explicit-visibility": ["error"],
      "security/no-block-members": ["warning"],
      "security/no-inline-assembly": ["warning"]
    }
  }
